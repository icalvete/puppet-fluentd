<source>
  type syslog
  port <%= @remote_port %>
  bind 0.0.0.0
  tag sp
  format none
</source>

<match sp.**>
  type record_reformer

  tag reformed.${tag}
  <record>
    n ${hostname}
    s ${tag_parts[2]}
    f ${tag_parts[1]}
  </record>
</match>

<match reformed.sp.local3.*>
  type rewrite_tag_filter
  rewriterule1 message ::apache:: apache.${tag_parts[2]}
</match>

<match apache.*>
  type parser
  key_name message
  reserve_data yes

  format /^(?<t>[^ ]*\s*[^ ]* [^ ]*) (?<h>[^ ]*) ::(?<a>[a-zA-Z0-9_\/\.\-]*)::(?<e>[A-Z]*)::(?<o>[a-zA-Z0-9_\/\.\-]*):\s(?<ip>[^ ]*) (?<ip2>[a-zA-Z0-9_\/\.\-]*) (?<rl>[a-zA-Z0-9_\/\.\-]*) (?<ru>[a-zA-Z0-9_\/\.\-]*) (?<rt>\[.*\]) "(?<met>[A-Z]*) \/(?<pqf>[a-zA-Z0-9_\/\.\-\?\*=&@]*) (?<hv>[^ ]*)" (?<st>[]0-9]*) (?<bs>[]0-9]*) "(?<ref>[^ ]*)" "(?<ua>[a-zA-Z0-9_\/\.\-\+\(\)\s:;.,=&\[\]\?@]*?)" (?<vh>.*):(?<p>[0-9]*) (?<rpt>[0-9]*)$/
  add_prefix processed3
</match>

<match php.*>
  type parser
  key_name message
  reserve_data yes

  format /^(?<t>[^ ]*\s*[^ ]* [^ ]*) (?<h>[^ ]*) (?<it>[a-zA-Z0-9_\/\.\-]*)(?:\[(?<pd>[0-9]+)\])?[^\:]*\: *:(?<a>[a-zA-Z0-9_\/\.\-]*)::(?<e>[A-Z]*)::(?<o>[a-zA-Z0-9_\/\.\-]*?):\s(?<m>.*)$/
  add_prefix processed4
</match>

<match processed3.**>
  type copy

  <store>
    type 		file
    path 		/var/log/td-agent/sp_l3
    time_slice_format 	%Y%m%d
    time_slice_wait 	10m
    time_format 	%Y%m%dT%H%M%S%z
    compress 		gzip
    utc
   </store>

  <store>
    type		elasticsearch
    host		<%= scope.lookupvar('fluentd::td_agent::elasticsearch_host') %>
    port 		9200
    logstash_format  true
    logstash_prefix  logstash_apache
    flush_interval   5s
  </store>
</match>

<match processed4.**>
  type copy

  <store>
    type 		file
    path 		/var/log/td-agent/sp_l4
    time_slice_format 	%Y%m%d
    time_slice_wait 	10m
    time_format 	%Y%m%dT%H%M%S%z
    compress 		gzip
    utc
   </store>

  <store>
    type		elasticsearch
    host		<%= scope.lookupvar('fluentd::td_agent::elasticsearch_host') %>
    port 		9200
    logstash_format  true
    logstash_prefix  logstash_operation
    flush_interval   5s
  </store>
</match>

<match processed5.**>
  type record_reformer

  tag extra.${tag}
  <record>
    n ${hostname}
    s ${tag_parts[4]}
    f ${tag_parts[3]}
  </record>

</match>

<match extra.processed5.**>
  type copy

  <store>
    type 		file
    path 		/var/log/td-agent/sp_l5
    time_slice_format 	%Y%m%d
    time_slice_wait 	10m
    time_format 	%Y%m%dT%H%M%S%z
    compress 		gzip
    utc
   </store>

  <store>
    type		elasticsearch
    host		<%= scope.lookupvar('fluentd::td_agent::elasticsearch_host') %>
    port 		9200
    logstash_format  true
    logstash_prefix  logstash_business
    logstash_dateformat %Y.%m
    flush_interval   5s
  </store>
</match>
